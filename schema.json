{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "array",
    "items": {
        "type": "object",
        "required": [
            "@type",
            "compensation",
            "name",
            "description",
            "author",
            "image",
            "url"
        ],
        "additionalProperties": false,
        "properties": {
            "@type": {
                "type": "string",
                "enum": [
                    "https://schema.org/SoftwareApplication"
                ]
            },
            "compensation": {
                "type": "string",
                "enum": [
                    "commercial",
                    "donation",
                    "free"
                ]
            },
            "name": {
                "type": "string"
            },
            "description": {
                "type": "string"
            },
            "author": {
                "type": "object",
                "required": [
                    "@type",
                    "name"
                ],
                "additionalProperties": false,
                "properties": {
                    "@type": {
                        "type": "string",
                        "enum": [
                            "https://schema.org/Person",
                            "https://schema.org/Organization"
                        ]
                    },
                    "name": {
                        "type": "string"
                    },
                    "url": {
                        "type": "string",
                        "pattern": "^https?://"
                    }
                }
            },
            "image": {
                "type": "string",
                "pattern": "^https?://"
            },
            "screenshot": {
                "type": "string",
                "pattern": "^https?://"
            },
            "url": {
                "type": "string",
                "pattern": "^https?://"
            },
            "downloadSize": {
                "type": "integer",
                "minimum": 0
            },
            "installSize": {
                "type": "integer",
                "minimum": 0
            },
            "start": {
                "type": "object",
                "properties": {
                    "route": {
                        "type": "string"
                    },
                    "activity": {
                        "type": "string"
                    },                    
                    "locomotive": {
                        "type": "string"
                    },                      
                    "consist": {
                        "type": "string"
                    },                      
                    "startingAt": {
                        "type": "string"
                    },                      
                    "headingTo": {
                        "type": "string"
                    },                      
                    "time": {
                        "type": "string"
                    },                      
                    "season": {
                        "type": "string"
                    },
                    "weather": {
                        "type": "string"
                    }
                },                   
                "additionalProperties": false,
                "required": [
                    "route",
                    "activity"
                ]
            }
        }
    }
}